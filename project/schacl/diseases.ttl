prefix sh: <http://www.w3.org/ns/shacl#> .
prefix : <http://project-wold.fr/schema#> .
prefix shapes: <http://project-wold.fr/shapes#> .
prefix skos: <http://www.w3.org/2004/02/skos/core#> .

shapes:medical_condition a sh:NodeShape ; 
  sh:targetClass :MedicalCondition ;
  sh:property [ 
    sh:path rdf:type ;
    sh:hasValue skos:Concept ;
  ] ;
  sh:property [ 
    sh:path skos:definition ;
    sh:languageIn ("fr" "en");
  ] ;
  sh:property [ 
    sh:path :name ;
    sh:languageIn ("fr" "en");
  ] ;
  sh:property [ 
    sh:path :signOrSymptom ;
    sh:qualifiedMinCount 1 ;
    sh:qualifiedValueShape [ sh:class :MedicalSignOrSymptom ]
  ] .

